<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:contextClickable="true">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/dark_blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/buy_traffic_back_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/connection_report_page_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="70dp"
            android:gravity="center"
            android:text="خرید ترافیک"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/traffic_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:ms_background_color="@color/white"
                app:ms_hint="مقدار ترافیک خود را انتخاب کنید"
                app:ms_hint_color="@color/dark_grey"
                app:ms_text_color="@color/dark_blue" />

            <LinearLayout
                android:id="@+id/payment_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/invoice_image_view"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:padding="32dp"
                    android:src="@drawable/invoice_background" />

                <TextView
                    android:id="@+id/gateway_select_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="انتخاب درگاه پرداخت"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/curved_grey"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/gateway_image_view_1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@drawable/irankish_logo" />

                    <RadioButton
                        android:id="@+id/radioButton"
                        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:checked="true" />
                </RadioGroup>

                <Button
                    android:id="@+id/pay_button"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_margin="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="پرداخت"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
